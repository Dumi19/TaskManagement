@{
    @model Dictionary<string, TimeSpan> // Ensure the model matches the data structure returned<h1>Task Report</h1>
}
    @if (Model != null && Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Task Name</th>
                    <th>Total Time Spent</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Key</td>
                        <td>@task.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No report data available.</p>
    }
